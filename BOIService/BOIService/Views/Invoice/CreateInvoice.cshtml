@model CreateInvoiceModel
@{
    ViewData["Title"] = "CreateInvoice";
}

<h1>CreateInvoice</h1>

<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create New Product</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" asp-controller="Invoice" asp-action="CreateInvoice" asp-antiforgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="card-body">
                        <select asp-for="CustomerId" 
                                class="form-control" 
                                asp-items="@(new SelectList(@ViewBag.ListOfCustomer, "Id", "Name"))" ></select>
                        @*<div class="form-group">
                            <label asp-for="ProductName" class="col-form-label">Product Name</label>
                            <input type="text" class="form-control is-valid" asp-for="ProductName" id="productName" placeholder="Product Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="col-form-label">Price</label>
                            <input type="number" class="form-control is-valid" asp-for="Price" id="price" placeholder="Price">
                        </div>
                        <div class="form-group">
                            <label asp-for="Date" class="col-form-label">Date</label>
                            <input type="datetime" class="form-control is-valid" asp-for="Date" id="date" placeholder="Date">
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="col-form-label">Category Id</label>
                            <input type="text" class="form-control is-valid" asp-for="CategoryId" id="categoryId" placeholder="Category Id">
                        </div>*@

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Create </button>
                        @*<a asp-action="ShowAllProducts" asp-controller="Product" class="btn btn-default float-right">Cancel</a>*@
                        <a asp-action="CreateInvoice" asp-controller="Invoice" class="btn btn-default float-right">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>