@model CreateCustomerModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Entry A New Customer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Entry New Customer</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Entry New Customer</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" asp-controller="Customer" asp-action="Create" asp-antiforgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Customer Name</label>
                            <input type="text" class="form-control is-valid" asp-for="Name" id="name" placeholder="Customer Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-form-label">Email</label>
                            <input type="email" class="form-control is-valid" asp-for="Email" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="col-form-label">Address</label>
                            <input type="text" class="form-control is-valid" asp-for="Address" id="address" placeholder="Address">
                        </div>
                        <div class="form-group">
                            <label asp-for="PaymentTerm" class="col-form-label">PaymentTerm(Date)</label>
                            <input type="text" class="form-control is-valid" asp-for="PaymentTerm" id="paymentTerm" placeholder="PaymentTerm">
                        </div>


                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Create </button>
                        @*<a asp-action="ShowAllProducts" asp-controller="Product" class="btn btn-default float-right">Cancel</a>*@
                        <a asp-action="Create" asp-controller="Customer" class="btn btn-default float-right">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

